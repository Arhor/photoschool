<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} %c{10} - %msg%n"/>
			<LevelRangeFilter minLevel="WARN" maxLevel="DEBUG"/>
		</Console>
		<File name="ErrorLog" fileName="./logs/error.log">
			<PatternLayout pattern="[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} %c{10} - %msg %throwable%n"/>
			<LevelRangeFilter minLevel="FATAL" maxLevel="ERROR"/>
		</File>
	</Appenders>
	<Loggers>
		<Root level="DEBUG">
			<AppenderRef ref="Console"/>
			<AppenderRef ref="ErrorLog"/>
		</Root>
	</Loggers>
</Configuration>